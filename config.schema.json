{
  "pluginAlias": "sleepmepro",
  "pluginType": "accessory",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Accessory Name",
        "type": "string",
        "default": "DockPro",
        "description": "Enter a name for this device",
        "required": true
      },
      "apiToken": {
        "title": "API Token",
        "type": "string",
        "format": "password",
        "description": "Get this from your account details, Developer API section at sleep.me",
        "required": true
      },
      "unit": {
        "title": "Temperature Unit",
        "type": "string",
        "default": "F",
        "enum": ["C", "F"],
        "enumNames": ["Celsius (°C)", "Fahrenheit (°F)"],
        "description": "Select temperature unit"
      },
      "schedule": {
        "title": "Sleep Schedule",
        "type": "array",
        "description": "Configure sleep temperature schedule",
        "items": {
          "type": "object",
          "properties": {
            "time": {
              "title": "Time",
              "type": "string",
              "placeholder": "22:00",
              "description": "Enter time in HH:MM format (24-hour clock)",
              "pattern": "^([01]\\d|2[0-3]):([0-5]\\d)$",
              "required": true
            },
            "temperature": {
              "title": "Temperature",
              "type": "number",
              "default": 20,
              "minimum": 10,
              "maximum": 35,
              "description": "Set the target temperature (10-35°C)",
              "required": true
            },
            "warmAwake": {
              "title": "Warm Awake Duration",
              "type": "number",
              "default": 0,
              "description": "Minutes before wake-up to increase temperature (optional)",
              "required":false
            }
          }
        }
      }
    }
  }
}